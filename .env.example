# Planora Backend Environment Variables

# Database
DATABASE_URL=sqlite:///./backend/plans.db

# Encryption (comma-separated for key rotation)
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEYS=your-encryption-key-here

# Google OAuth (for Google Calendar integration)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# Optional: Backend URL for redirects
BACKEND_URL=http://localhost:8000

# Optional: Frontend URL for CORS
FRONTEND_URL=http://localhost:8501

# Optional: For production, set to 'production'
ENVIRONMENT=development

# Optional: Uvicorn settings
HOST=0.0.0.0
PORT=8000
RELOAD=true
